    </bean>
       
    <!-- SqlSession -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="datasource"></property>
        <property name="mapperLocations" value ="classpath:com/stoc/mapper/*.xml" />
    </bean>
    
    <!-- MyBatis -->
    <mybatis-spring:scan base-package="com.stoc.mapper"/>
    <context:component-scan base-package="com.stoc.service"></context:component-scan>		
